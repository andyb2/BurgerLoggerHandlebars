<div class="container vertical-center">
    <div class="row justify-content-center">

        <div class="col-4">
            <ul class="list-group" id="firstList">
                <h4 class="burgerHeader">Burgers!</h4>
                {{#each data}}
                {{#unless this.eaten}}
                <li class="list-group-item groupOne">{{this.title}}
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-primary" onclick="eatBurger({{this.id}})">Eat</button>
                        <button class="btn btn-secondary" onclick="removeBurger({{this.id}})">Remove</button>
                    </div>
                </li>
                {{/unless}}
                {{/each}}

            </ul>
        </div>
        <div class="col-4 text-center">
            <label class="form-label">
                <h4 class="burgerHeader">Enter Burger!</h4>
            </label>
            <textarea class="form-control" id="burgerInput" rows="3"></textarea>
            <button class="btn btn-primary my-2" onclick="submitBurger(event)">Submit</button>
        </div>
        <div class="col-4">
            <ul class="list-group" id="secondList">
                <h4 class="eatenHeader">Eaten Burger!</h4>
                {{#each data}}
                {{#if this.eaten}}
                <li class="list-group-item groupTwo">{{this.title}}
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-secondary" onclick="removeBurger({{this.id}})">Remove</button>
                    </div>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>